# Data Collector Environment Variables Template
# Copy this file to .env and fill in the actual values

# =============================================
# CENTRAL INFLUXDB CONNECTION
# =============================================
# Central InfluxDB where data will be sent
INFLUXDB_CENTRAL_URL=http://your-central-influxdb:8086
INFLUXDB_CENTRAL_TOKEN=your-central-influxdb-token-here
INFLUXDB_CENTRAL_ORG=your-organization-name
INFLUXDB_CENTRAL_BUCKET=your-target-bucket-name

# =============================================
# SOURCE SERVER A CONFIGURATION (SRV-8)
# =============================================
# First source server configuration
SERVER_A_URL=http://your-server-a-ip:8086
SERVER_A_TOKEN=your-server-a-token-here
SERVER_A_ORG=default
SERVER_A_BUCKET=telegraf

# =============================================
# SOURCE SERVER B CONFIGURATION (SRV-30)
# =============================================
# Second source server configuration
SERVER_B_URL=http://your-server-b-ip:8086
SERVER_B_TOKEN=your-server-b-token-here
SERVER_B_ORG=SRV
SERVER_B_BUCKET=SRV_monitoring
SERVER_B_BUCKET_2=power_monitoring

# =============================================
# DATA COLLECTOR SETTINGS
# =============================================
# Collection interval in seconds (how often to collect data)
COLLECTOR_INTERVAL=60

# Health check port for monitoring
HEALTH_CHECK_PORT=5000

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

